<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Back to restaurants", restaurants_path %>
  <h1>New review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, input_html: { min: '0', max: '5' } %>
    <%= f.submit %>
  <% end %>
</div>
